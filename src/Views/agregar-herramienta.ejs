  <body>
    <div id="container">
      <header id="header">
        <navbar class="navbar">
          <img src="/img/logo.png" alt="LOGO" class="logo" />
          <ul class="navbar-list">
            <li><a href="/inicio">Inicio</a></li>
            <li><a href="/stock" class="active">Stock</a></li>
            <li><a href="/facturas">Pedidos</a></li>
            <li class="mostrar">
